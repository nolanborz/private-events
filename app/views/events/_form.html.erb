<%= form_with(model: @event, class: "max-w-md mx-auto p-6 bg-white rounded-lg shadow") do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-medium mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div class="mb-4">
    <%= form.label :date, class: "block text-gray-700 text-sm font-medium mb-2" %>
    <%= form.date_field :date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <%= form.submit class: "w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors" %>
<% end %>