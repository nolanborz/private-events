# app/views/events/index.html.erb
<h1>Events</h1>

<h2>Upcoming Events</h2>
<% @events.where("date >= ?", Date.today).order(date: :asc).each do |event| %>
  <div>
    <h3><%= link_to event.title, event_path(event) %></h3>
    <p>Date: <%= event.date %></p>
    <p>Created by: <%= link_to event.creator.email, user_path(event.creator) %></p>
  </div>
<% end %>

<h2>Past Events</h2>
<% @events.where("date < ?", Date.today).order(date: :desc).each do |event| %>
  <div>
    <h3><%= link_to event.title, event_path(event) %></h3>
    <p>Date: <%= event.date %></p>
    <p>Created by: <%= link_to event.creator.email, user_path(event.creator) %></p>
  </div>
<% end %>