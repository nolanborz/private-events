<div class="space-y-8">
  <h1 class="text-3xl font-bold text-gray-900">Events</h1>

  <div class="space-y-6">
    <h2 class="text-2xl font-semibold text-gray-800">Upcoming Events</h2>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @events.upcoming.each do |event| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-3">
            <%= link_to event.title, event_path(event), class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          <div class="space-y-2 text-gray-600">
            <p class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= event.date.strftime("%B %d, %Y") %>
            </p>
            <p class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Created by: <%= link_to event.creator.email, user_path(event.creator), class: "text-blue-600 hover:text-blue-800" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="space-y-6">
    <h2 class="text-2xl font-semibold text-gray-800">Past Events</h2>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @events.past.each do |event| %>
        <div class="bg-white rounded-lg shadow-md p-6 opacity-75 hover:opacity-100 transition-opacity">
          <h3 class="text-xl font-semibold mb-3">
            <%= link_to event.title, event_path(event), class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          <div class="space-y-2 text-gray-600">
            <p class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <%= event.date.strftime("%B %d, %Y") %>
            </p>
            <p class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Created by: <%= link_to event.creator.email, user_path(event.creator), class: "text-blue-600 hover:text-blue-800" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>